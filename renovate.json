{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [ "config:base", "schedule:weekly" ],
  "timezone": "Asia/Tokyo",
  "schedule": ["before 9am"],
  "automerge": false,
  "automergeStrategy": "merge-commit",
  "separateMajorMinor": false,
  "labels": ["dependencies"],
  "ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/bower_components/**",
  ],
  "patch": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "assignees": ["kakikubo"]
    },
    {
      "matchManagers": ["github-actions"],
      "assignees": [
        "kakikubo"
      ]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "patch": {
        "enabled": true
      },
      "automerge": true,
      "platformAutomerge": true
    }
  ]
}
